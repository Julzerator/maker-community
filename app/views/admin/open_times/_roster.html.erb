<table class="roster" data-controller="roster">
  <thead>
    <tr>
      <th colspan="2">Day</th>
      <th>Session</th>
      <% users.each do |user| %>
      <th><%= user.short_name %></th>
      <% end %>
    </tr>
    <tr class="actions" data-roster-target="edits">
      <th></th>
      <th></th>
      <th></th>
      <% users.each do |user| %>
      <th data-user="<%= user.id %>"><% if policy([:admin, user]).edit_availability? %> <%= link_to 'edit', '#', 'data-action' => 'edit', 'data-user' => user.id %> <% end %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% sessions.each do |session| %>
    <tr>
      <td><%= session.date.day %></td>
      <td><%= session.date.strftime('%a') %></td>
      <td><%= session.title %></td>
      <% users.each do |user| %>
      <td class="user-slot" data-user="<%= user.id %>"><a class="open-time availability-unknown" href="#"></a></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
